{
  "name": "entry-port-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "windows-dev": "concurrently --kill-others-on-fail \"set HTTPS=true &&SET mongoURI=mongodb://localhost:27017/billingUser&& nodemon server.js\" \"cd client && set REACT_APP_PREFIX=/&& npm start\"",
    "docker-dev": "concurrently --kill-others-on-fail \"SET mongoURI=mongodb://mongo:27017/billingUser& nodemon server.js\" \"yarn client\"",
    "linux-dev": "concurrently --kill-others-on-fail \"yarn server\" \"set HTTPS=true&&yarn client\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "mongoose": "^5.4.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
